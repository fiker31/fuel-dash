@{ var weeklyJson = new StatisticController().weeklySalesList(Session["s"].ToString()); }
<script>
    var myList =  @Html.Raw(Json.Encode(weeklyJson));
    const ctx = document.getElementById('myChart');
    var date = new Date();
    var date2 = new Date();
    date2.setDate(date2.getDate() - 1);
    var date3 = new Date();
    date3.setDate(date3.getDate() - 2);
    var date4 = new Date();
    date4.setDate(date4.getDate() - 3);
    var date5 = new Date();
    date5.setDate(date5.getDate() - 4);
    var date6 = new Date();
    date6.setDate(date6.getDate() - 5);
    var date7 = new Date();
    date7.setDate(date7.getDate() - 6);
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [date.toLocaleString('default', { month: 'long' }) + ' ' + date.getUTCDate(),
                date2.toLocaleString('default', { month: 'long' }) + ' ' + date2.getUTCDate(),
                date3.toLocaleString('default', { month: 'long' }) + ' ' + date3.getUTCDate(),
                date4.toLocaleString('default', { month: 'long' }) + ' ' + date4.getUTCDate(),
                date5.toLocaleString('default', { month: 'long' }) + ' ' + date5.getUTCDate(),
                date6.toLocaleString('default', { month: 'long' }) + ' ' + date6.getUTCDate(),
                date7.toLocaleString('default', { month: 'long' }) + ' ' + date7.getUTCDate()],
            datasets: [{
               
                label: 'Total Transactions',
                data: [myList[0], myList[1], myList[2], myList[3], myList[4], myList[5],myList[6]],
                borderWidth: 2,
                borderRadius:10,

                backgroundColor: [
                          'rgba(199, 26, 115, 0.8)',
                           'rgba(199, 26, 115, 0.8)',
                           'rgba(199, 26, 115, 0.8)',
                           'rgba(199, 26, 115, 0.8)',
                           'rgba(199, 26, 115, 0.8)',
                           'rgba(199, 26, 115, 0.8)',
                           'rgba(199, 26, 115, 0.8)'
                        ],
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
